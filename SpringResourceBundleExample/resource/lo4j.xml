<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
    <appender name="R" class="com.bsm.util.PurgingDailyRollingFileAppender">
        <param name="CompressBackups" value="true"/>
        <param name="File" value="\tmp\logs\Server\mgwaysoap.log"/>
        <param name="MaxNumberOfDays" value="45"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5d{HH:mm:ss,SSS} %-5p %c - %m%n"/>
        </layout>
    </appender>
    <appender name="stdout" class="org.apache.log4j.ConsoleAppender">
        <param name="Target" value="System.out"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{ABSOLUTE} %5p %c{1}:%L - %m%n"/>
        </layout>
    </appender>
    <logger name="com.mchange">
        <level value="ERROR"/>
    </logger>
    <logger name="org.ajax4jsf">
        <level value="ERROR"/>
    </logger>
    <logger name="org.apache.activemq">
        <level value="ERROR"/>
    </logger>
    <logger name="org.apache.axis">
        <level value="ERROR"/>
    </logger>
    <logger name="org.apache.catalina">
        <level value="ERROR"/>
    </logger>
    <logger name="org.apache.commons">
        <level value="ERROR"/>
    </logger>
    <logger name="org.apache.myfaces">
        <level value="ERROR"/>
    </logger>
    <logger name="org.apache.shale">
        <level value="ERROR"/>
    </logger>
    <logger name="org.apache.velocity">
        <level value="ERROR"/>
    </logger>
    <logger name="org.hibernate">
        <level value="ERROR"/>
    </logger>
    <logger name="org.springframework">
        <level value="ERROR"/>
    </logger>
    <logger name="org.springmodules">
        <level value="ERROR"/>
    </logger>
    <root>
        <level value="ERROR"/>
        <appender-ref ref="R"/>
        <appender-ref ref="stdout"/>
    </root>
</log4j:configuration>